<!-- Patient Info -->

<div class="patient-info">
  <%= bootstrap_form_for @pregnancy do |preg| %>
    <div class="col-md-4">
      <%= preg.fields_for :patient, @pregnancy.patient do |pat| %>
        <!-- TODO need to add value -->
        <%= pat.text_field :name, label: 'Name' %>
        <%= pat.text_field :primary_phone, label: 'Phone Number' %>
      <% end %>
    </div>
    <div class="col-md-4">
      <!-- need a date picker -->
      <%= preg.text_field :last_menstrual_period_time, label: 'Last Menstrual Period:' %>
      <!-- select number of weeks -->
      <!-- TODO want to add placeholder: 'Select Number of Weeks' -->
      <%= preg.select :last_menstrual_period_weeks, weeks_options %>
      <%# c.select :last_menstrual_period_weeks, options_for_select(weeks_options, c.last_menstrual_period_weeks), placeholder: "Select number of weeks" %>
    </div>
    <div class="col-md-4">
      <!-- case status should be c.select -->
      <%= preg.text_field :status, label: 'Status:' %>
      <!-- Appointment Date (not in Case model) -->
    </div>
  <% end %>
</div>
