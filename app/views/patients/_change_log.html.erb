<section id="change_log" class="abortion-info tab-pane">
  <div class="col-sm-12">
    <h2>Patient history</h2>
    <table class="table border-side">
      <thead>
        <tr>
          <th>Modified Date</th>
          <th>Field</th>
          <th>Changed From</th>
          <th>Changed To</th>
          <th>CM</th>
        </tr>
      </thead>
      <tbody>
        <% patient.assemble_audit_trails.each do |revision| %>
          <tr>
            <td><%= revision.date_of_change %></td>
            <td><%= safe_join_fields(revision.changed_fields) %></td>
            <td><%= safe_join_fields(revision.changed_from) %></td>
            <td><%= safe_join_fields(revision.changed_to) %></td>
            <td><%= revision.changed_by_user %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
